{% extends "base.twig" %}

{% block title %}Sign In{% endblock %}
{% block content %}
    {% if _form_auth_invalid_credentials %}
        <p class="error">
            The credentials you provided are not correct. Please try again!
        </p>
    {% endif %}

    <form method="post" class="signin" action="authenticate">
        <fieldset>
            {% if _form_auth_invalid_credentials %}
                <label for="userName">Username</label>
                <input type="text"     id="userName" name="userName" autocapitalize="off" placeholder="Username" value="{{ _form_auth_invalid_credentials_user }}" required>
                <label for="userPass">Password</label>
                <input type="password" id="userPass" name="userPass" placeholder="Password" autofocus required>
            {% else %}
                <label for="userName">Username</label>
                <input type="text"     id="userName" name="userName" autocapitalize="off" placeholder="Username" autofocus required>
                <label for="userPass">Password</label>
                <input type="password" id="userPass" name="userPass" placeholder="Password" required>
            {% endif %} 
        </fieldset>
        <fieldset>
            <input type="hidden" name="_form_auth_redirect_to" value="{{ _form_auth_redirect_to }}">
            <button class="success" type="submit">Sign In</button>
        </fieldset>
    </form>
{% endblock %}
